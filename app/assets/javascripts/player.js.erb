var Player = function(name){
  this.name = name
  Player.all.push(this)
  this.opponent = null
}

Player.all = []

Player.opponents = function(){
  Player.all[0].opponent = Player.all[1]
  Player.all[1].opponent = Player.all[0]
}


Player.prototype.takesTurn = function(){
  new Turn(this)
