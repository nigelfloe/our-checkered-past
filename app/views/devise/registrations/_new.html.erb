<div id="signup-partial" style="display:none">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">Sign Up</h4>
  </div>
  <br>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "login-form", role: "form"}) do |f| %>
    <%= devise_error_messages! %>

    <div class="field form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: 'form-control', id: 'sign-up-email', type: 'email', required: true, placeholder: 'Your email' %>
    </div>

    <div class="field form-group">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: 'form-control', required: true %>
    </div>

    <div class="field form-group">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', required: true %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= link_to "Log in", new_session_path(resource_name), class: "log-in-link" %><br />
  <%= link_to "Forgot your password?", new_password_path(resource_name), class: "forgot-password-link" %><br />
</div>
