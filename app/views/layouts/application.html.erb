          <span class="dot"></span><span class="line"></span>
          <span class="dot"></span><span class="line"></span>
          <span class="dot"></span><span class="line"></span>
        </div>
        <% if !current_user %>
          <a class="btn btn-primary btn-login" href="/users/sign-in" data-toggle="modal" data-target="#loginModal"><i class="icon-rocket"></i>Login</a>
        <% else %>
          <%= button_to "Sign Out", destroy_user_session_path, method: 'delete', class: 'btn btn-primary btn-login'  %>
          <!-- <a class="btn btn-primary btn-login" href="/users/sign-out"><i class="icon-user"></i>Sign Out</a> -->
        <% end %>
        <nav class="main-navi">
